 <% layout('layout') %>
 <div class="container">
     <h1>Write an answer</h1>
     <hr>
     <div class="row">
         <div class="col-lg-6">
            <form method="post">
                 <div class="form-group">
                     <label for="name">Subject : </label>
                     <input class="form-control" name="name" type="text"></input>
                 </div>
                 <div class="form-group">
                     <label for="text">Text : </label>
                     <input class="form-control" name="text" type="text"></input>
                 </div>               
                 <div class="form-group">
                     <form action="/answers/<%= id %>">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                 </div>
             </form>
         </div>
     </div>
 </div>